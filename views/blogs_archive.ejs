            <!-- <button class="secondary-button"><i class="fa-solid fa-feather-pointed"></i></button> -->
            <button class="secondary-button">Discover more</button>
        </a>
    </div>
    
    <!-- <img src="images/ablazelilith-bg-sm-6.png" alt="Header image" class="header-image"> -->

    <div class="blog-post">
