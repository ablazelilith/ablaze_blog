                    <div class="blog-post-header">
                        <h3 class="blog-post-title"><%= featuredBlog[0].title %></h3>
                    </div>
                    <div class="blog-post-body">
                        <p><%= featuredBlog[0].intro %></p>
                    </div>
                    <div class="blog-post-footer">
                        <p class="author">
                            <span class="by">By</span><a href="<%= featuredBlog[0].author.externalLink %>" class="author-link"><%= featuredBlog[0].author.name %></a>
                        </p>
                        <p class="date"><%= featuredBlog[0].time %></p>
                    </div>
                </div>
            </div>
        </div>

