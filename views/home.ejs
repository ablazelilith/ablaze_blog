<%- include("partials/header.ejs"); %>

<div class="page-header">
    <h1 class="page-header-title">Experience・Share・Inspire</h1>
</div>

<!--*-~~~~~✧・*・✧~~~~~-* 🦊🧡 x My Blog x 🧡🦊 *-~~~~~✧・*・✧-~~~~~-*-->

<% if (userposts.length === 0) { %>
<div class="blog-category">

    <div class="category-header">
        <i class="fa-solid fa-fire"></i>
        <h2 class="category-title">My Blog</h1>
    </div>

    <div class="blog-post-list">
        <div class="blog-post empty-blog">

            <div class="empty-blog-notice">
                <div class="empty-blog-notice-content">

                    <div class="blog-post-header">
                        <h3 class="blog-post-title"><%= homeContent.title %></h3>
                    </div>

                    <div class="blog-post-body">
                        <p class="empty-blog-notice-message"><%= homeContent.content %></p>
                    </div>

                    <div class="blog-post-footer">
                        <a href="/new-blog">
                            <button type="submit" class="main-button">Create Blog</button>
                        </a>
                    </div>

                </div>
            </div>

            <img src="images/ablazelilith_original.webp" class="empty-blog-icon" alt="Ablaze Lilith">

        </div>
    </div>
    
</div>
<% } %>

<!--*-~~~~~✧・*・✧~~~~~-* 🦄💜 x Popular Posts x 💜🦄 *-~~~~~✧・*・✧-~~~~~-*-->

<div class="blog-category popular">

    <div class="category-header">
        <i class="fa-solid fa-book-bookmark"></i>
        <h2 class="category-title">Featured Blogs</h1>
    </div>

    <%- include("components/featured-blogposts.ejs"); %>
    
    <div class="blog-post-group-two-colomn">

        <div class="blog-post">
            <img src="blogs/<%= blogposts[30].thumbnail %>" class="blog-post-image" alt="Blog post image">
            <div class="blog-post-content">
                <div class="blog-post-header-and-body-wrap">
                    <div class="blog-post-header">
                        <h3 class="blog-post-title"><%= blogposts[30].title %></h3>
                    </div>
                    <div class="blog-post-body">
                        <p><%= blogposts[30].overview %></p>
                    </div>
                </div>
                <div class="blog-post-footer-wrap">
                    <div class="blog-post-footer">
                        <p class="author">
                            <span class="by">By</span><a href="<%= blogposts[30].author.externalLink %>" class="author-link"><%= blogposts[30].author.name %></a>
                        </p>
                        <p class="date"><%= blogposts[30].time %></p>
                    </div>
                </div>
            </div>
        </div>

        <div class="blog-post">
            <img src="blogs/<%= blogposts[31].thumbnail %>" class="blog-post-image" alt="Blog post image">
            <div class="blog-post-content">
                <div class="blog-post-header-and-body-wrap">
                    <div class="blog-post-header">
                        <h3 class="blog-post-title"><%= blogposts[31].title %></h3>
                    </div>
                    <div class="blog-post-body">
                        <p><%= blogposts[31].overview %></p>
                    </div>
                </div>
                <div class="blog-post-footer-wrap">
                    <div class="blog-post-footer">
                        <p class="author">
                            <span class="by">By</span><a href="<%= blogposts[31].author.externalLink %>" class="author-link"><%= blogposts[31].author.name %></a>
                        </p>
                        <p class="date"><%= blogposts[31].time %></p>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="category-button">
        <a href="/latest-blogs">
            <button class="outline-button"><i class="fa-solid fa-magnifying-glass"></i>Discover Blogs</button>
        </a>
    </div>  

</div>

<!--*-~~~~~✧・*・✧~~~~~-* 🐬💙 x Popular Authors x 💙🐬 *-~~~~~✧・*・✧-~~~~~-*-->

<div class="blog-category section-author featured">

    <div class="category-header">
        <i class="fa-solid fa-crown"></i>
        <h2 class="category-title">Popular Authors</h1>
    </div>

    <div class="author-list">
        <div class="author-card-list">
            <div class="card-row">
                <%- include("components/author-cards/author-card-featured"); %>
            </div>
        </div>
    </div>

    <div class="category-button">
        <a href="/favorite-authors">
            <button class="outline-button"><i class="fa-solid fa-magnifying-glass"></i>Discover Authors</button>
        </a>
    </div>  

</div>

<%- include("partials/footer.ejs"); %>