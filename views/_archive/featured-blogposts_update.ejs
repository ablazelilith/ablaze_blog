        <div class="carousel-inner">
        <% for (i = 0; i < 3; i++) { %>
        <% if (blogposts[i].featured = true) { %>

            <% if (blogposts[i].active = true) { %>
                <div class="carousel-item active">
                    <div class="blog-post popular-first">
                        <img src="blogs/<%= blogposts[i].hero %>" class="blog-post-image" alt="Blog post image">
                        <div class="blog-post-content">
                            <div class="blog-post-header">
                                <h3 class="blog-post-title"><%= blogposts[i].title %></h3>
                            </div>
                            <div class="blog-post-body">
                                <p><%= blogposts[i].overview %></p>
                            </div>
                            <div class="blog-post-footer">
                                <p class="author">
                                    <span class="by">By</span><a href="<%= blogposts[i].author.externalLink %>" class="author-link"><%= blogposts[i].author.name %></a>
                                </p>
                                <p class="date"><%= blogposts[i].time %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }  else { %>
                <div class="carousel-item">
                    <div class="blog-post popular-first">
                        <img src="blogs/<%= blogposts[i].hero %>" class="blog-post-image" alt="Blog post image">
                        <div class="blog-post-content">
                            <div class="blog-post-header">
                                <h3 class="blog-post-title"><%= blogposts[i].title %></h3>
                            </div>
                            <div class="blog-post-body">
                                <p><%= blogposts[i].overview %></p>
                            </div>
                            <div class="blog-post-footer">
                                <p class="author">
                                    <span class="by">By</span><a href="<%= blogposts[i].author.externalLink %>" class="author-link"><%= blogposts[i].author.name %></a>
                                </p>
                                <p class="date"><%= blogposts[i].time %></p>
                            </div>
                        </div>
                    </div>
                </div>
            <% } %>
        <% } %>
        <% } %>
    </div>
    


    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
